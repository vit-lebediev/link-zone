{% trans_default_domain "LZCorePublicBundle" %}

<div class="modal-header">
    {{ "orders.send_order"|trans }}
</div>
<form ng-submit="sendOrder()">
    <div class="modal-body">
        <fieldset>
            <div class="form-group">
                <label for="platform_id">{{ "orders.platform_for_order"|trans }}:</label>
                <select ng-model="platform" ng-options="p.url for p in platforms" required="required" name="platform_id" id="platform_id"></select>
            </div>
            <div class="form-group">
                <label for="order_url">{{ "orders.your_link"|trans }}:</label>
                <input type="url" ng-model="order.senderLink" required="required" name="order_sernder_link" id="order_sernder_link" />
            </div>
            <div class="form-group">
                <label for="order_url">{{ "orders.anchor"|trans }}:</label>
                <input type="text" ng-model="order.senderLinkText" required="required" name="order_sernder_link_text" id="order_sernder_link_text" />
            </div>
            <div class="form-group">
                <label for="order_url">{{ "common.comment"|trans }}:</label>
                <textarea ng-model="order.startDialogWith"></textarea>
            </div>
        </fieldset>
    </div>
    <div class="modal-footer">
        <button type="button" ng-click="close()" class="btn btn-primary">{{ "common.cancel"|trans }}</button>
        <button type="submit" class="btn btn-primary">{{ "orders.send_order"|trans }}</button>
    </div>
</form>
