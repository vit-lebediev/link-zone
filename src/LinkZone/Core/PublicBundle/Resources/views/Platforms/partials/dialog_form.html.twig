{% trans_default_domain "LZCorePublicBundle" %}

<fieldset>
    <div class="form-group">
        <label for="platform_url">{{ "platforms.address"|trans }}:</label>
        {{ form_widget(platformDialog.url) }}
    </div>
    <div class="form-group">
        <label for="platform_topic">{{ "platforms.topic"|trans }}:</label>
        {{ form_widget(platformDialog.topic) }}
    </div>
    <div class="form-group">
        <label for="platform_description">{{ "platforms.description"|trans }}:</label>
        {{ form_widget(platformDialog.description) }}
    </div>
    <div class="form-group">
        <label for="platform_hidden">{{ "platforms.hide"|trans }}:</label>
        {{ form_widget(platformDialog.hidden) }}
    </div>
    <div class="form-group">
        <label for="platform_tags">{{ "platforms.keywords"|trans }}:</label>
        <div>
            <tags-input ng-model="tags"></tags-input>
        </div>
    </div>
    {{ form_widget(platformDialog._token) }}
</fieldset>
