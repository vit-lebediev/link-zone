<!DOCTYPE html>
<html ng-app="LinkZone">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ "common.welcome"|trans({}, "LZCorePublicBundle") }}{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/themes/smoothness/jquery-ui.css" />
        <link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/flick/jquery-ui.css" />
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" />

        <link rel="stylesheet" href="{{ asset("bundles/linkzonecoreadmin/css/common.css") }}" />
        {% stylesheets
            'bundles/linkzonecorepublic/css/*'
            'bundles/linkzonecorepublic/css/pages/*'
            filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="header">
            <div id="header_left" class="left">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <div id="main_menu">{{ knp_menu_render("public_main") }}</div>
                {% endif %}
            </div>
            <div id="headr_right" class="right">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                    <a href="{{ path('fos_user_security_logout') }}">
                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                    </a>
                {% else %}
                    <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                    <a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
                {% endif %}
            </div>
        </div>

        <div id="body" ng-view></div>
        <div id="footer">{% block footer %}Footer{% endblock %}</div>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.2/jquery-ui.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular-resource.min.js"></script>
        <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
        <script src="{{ asset("bundles/linkzonecorepublic/js/lib/angular/ui-bootstrap-tpls.min.js") }}"></script>
        <script src="{{ asset("bundles/linkzonecorepublic/js/lib/angular/ui-bootstrap.min.js") }}"></script>
        <script src="{{ asset("bundles/linkzonecorepublic/js/lib/angular/ng-tags-input.min.js") }}"></script>
        <script src="{{ asset("bundles/linkzonecorepublic/js/application.js") }}"></script>
        <script src="{{ asset("bundles/linkzonecorepublic/js/controllers.js") }}"></script>
        <script src="{{ asset("bundles/linkzonecorepublic/js/services.js") }}"></script>
        <script src="{{ asset("bundles/linkzonecoreadmin/js/base.js") }}"></script>
        <script src="{{ asset("bundles/linkzonecoreadmin/js/jQueryPlugins.js") }}"></script>
        <script src="{{ asset("bundles/linkzonecorepublic/js/tag-it.min.js") }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
